<% layout('layouts/boilerplate') %>
 
    <h1>Edit Planet</h1>
    <form action ="/planets/<%= planet._id  %>?_method=PUT " method="POST">
        <div>
            <label for="pname">Name</label>
            <input type="text" id="title" name="planet[pname]" value="<%= planet.pname %>">
        </div>
        <div>
            <label for="description">Description</label>
            <textarea type="text" id="description" name="planet[description]"><%= planet.description %> </textarea>
        </div>
        <button>Discover Planet</button>
    </form>
